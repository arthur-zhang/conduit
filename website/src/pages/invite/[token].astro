---
import Layout from '../../layouts/Layout.astro'
import { createClient } from '@supabase/supabase-js'

const { token } = Astro.params

// Validate token
const supabaseUrl = import.meta.env.PUBLIC_SUPABASE_URL
const supabaseKey = import.meta.env.PUBLIC_SUPABASE_ANON_KEY

let status: 'valid' | 'invalid' | 'expired' | 'used' = 'invalid'
let email = ''

if (supabaseUrl && supabaseKey && token) {
  const supabase = createClient(supabaseUrl, supabaseKey)

  const { data: invite } = await supabase
    .from('invite_tokens')
    .select('*, waitlist(email)')
    .eq('token', token)
    .single()

  if (invite) {
    email = invite.waitlist?.email || ''

    if (invite.used_at) {
      status = 'used'
    } else if (new Date(invite.expires_at) < new Date()) {
      status = 'expired'
    } else {
      status = 'valid'
    }
  }
}

const githubAuthUrl = `/api/auth/github?invite=${encodeURIComponent(token || '')}`
---

<Layout title="You're Invited to Conduit">
  <main class="min-h-screen flex items-center justify-center p-4">
    <div class="max-w-md w-full">
      {status === 'valid' ? (
        <div class="bg-[var(--color-bg-hero)] border border-[var(--color-border-default)] rounded-lg p-8 text-center">
          <div class="mb-6">
            <span class="text-[var(--color-accent-primary)] text-4xl font-display tracking-widest">CONDUIT</span>
          </div>

          <h1 class="text-2xl font-display text-[var(--color-text-bright)] mb-4">
            You're Invited!
          </h1>

          <p class="text-[var(--color-text-secondary)] mb-6">
            Your spot on the waitlist has come up. Connect your GitHub account to get access to the private repository.
          </p>

          <a
            href={githubAuthUrl}
            class="inline-flex items-center justify-center gap-3 w-full px-6 py-3 rounded-lg bg-[#24292f] hover:bg-[#32383f] text-white font-medium transition-colors"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
            </svg>
            Continue with GitHub
          </a>

          <p class="text-[var(--color-text-muted)] text-xs mt-6">
            This will grant you read access to the private Conduit repository.
          </p>
        </div>
      ) : status === 'expired' ? (
        <div class="bg-[var(--color-bg-hero)] border border-[var(--color-border-default)] rounded-lg p-8 text-center">
          <div class="w-16 h-16 mx-auto mb-4 rounded-full bg-[var(--color-accent-warning)]/10 flex items-center justify-center">
            <svg class="w-8 h-8 text-[var(--color-accent-warning)]" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>

          <h1 class="text-2xl font-display text-[var(--color-text-bright)] mb-4">
            Invite Expired
          </h1>

          <p class="text-[var(--color-text-secondary)]">
            This invite link has expired. Please contact us if you need a new invite.
          </p>
        </div>
      ) : status === 'used' ? (
        <div class="bg-[var(--color-bg-hero)] border border-[var(--color-border-default)] rounded-lg p-8 text-center">
          <div class="w-16 h-16 mx-auto mb-4 rounded-full bg-[var(--color-accent-success)]/10 flex items-center justify-center">
            <svg class="w-8 h-8 text-[var(--color-accent-success)]" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
            </svg>
          </div>

          <h1 class="text-2xl font-display text-[var(--color-text-bright)] mb-4">
            Already Accepted
          </h1>

          <p class="text-[var(--color-text-secondary)] mb-6">
            This invite has already been used.
          </p>

          <a
            href="https://github.com/conduit-cli/conduit"
            target="_blank"
            rel="noopener"
            class="inline-flex items-center gap-2 text-[var(--color-accent-primary)] hover:underline"
          >
            Go to Repository
            <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
            </svg>
          </a>
        </div>
      ) : (
        <div class="bg-[var(--color-bg-hero)] border border-[var(--color-border-default)] rounded-lg p-8 text-center">
          <div class="w-16 h-16 mx-auto mb-4 rounded-full bg-[var(--color-accent-error)]/10 flex items-center justify-center">
            <svg class="w-8 h-8 text-[var(--color-accent-error)]" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
            </svg>
          </div>

          <h1 class="text-2xl font-display text-[var(--color-text-bright)] mb-4">
            Invalid Invite
          </h1>

          <p class="text-[var(--color-text-secondary)]">
            This invite link is not valid. Please check the link or contact us for assistance.
          </p>
        </div>
      )}
    </div>
  </main>
</Layout>
