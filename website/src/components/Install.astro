<section id="install" class="py-24 px-4">
  <div class="max-w-4xl mx-auto">
    <!-- Section Header -->
    <div class="text-center mb-12">
      <p class="text-[var(--color-text-muted)] font-mono text-sm mb-2">
        <span class="text-[var(--color-phosphor)]">//</span> GET STARTED
      </p>
      <h2 class="font-display text-3xl md:text-4xl text-[var(--color-text-bright)] mb-4">
        Install in Seconds
      </h2>
      <p class="text-[var(--color-text-secondary)]">
        One command to start orchestrating AI agents in your terminal.
      </p>
    </div>

    <!-- Install Command -->
    <div class="terminal-frame max-w-2xl mx-auto mb-8">
      <div class="terminal-buttons">
        <div class="terminal-button terminal-button-close"></div>
        <div class="terminal-button terminal-button-minimize"></div>
        <div class="terminal-button terminal-button-maximize"></div>
        <span class="ml-4 text-[var(--color-text-muted)] text-xs font-mono">Terminal</span>
      </div>
      <div class="p-6">
        <div class="flex items-center justify-between gap-4">
          <code class="text-[var(--color-text-bright)] font-mono text-base md:text-lg">
            <span class="text-[var(--color-accent-success)]">$</span>
            <span class="text-[var(--color-text-primary)]"> curl -fsSL https://getconduit.sh/install | sh</span>
          </code>
          <button
            id="copy-button"
            class="p-2 rounded hover:bg-[var(--color-bg-elevated)] transition-colors flex-shrink-0"
            title="Copy to clipboard"
            aria-label="Copy install command"
          >
            <svg id="copy-icon" class="w-5 h-5 text-[var(--color-text-muted)] hover:text-[var(--color-accent-primary)]" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z" />
            </svg>
            <svg id="check-icon" class="w-5 h-5 text-[var(--color-accent-success)] hidden" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
            </svg>
          </button>
        </div>
      </div>
    </div>

    <!-- Supported Platforms -->
    <div class="max-w-2xl mx-auto">
      <h3 class="font-mono text-sm text-[var(--color-text-muted)] mb-4 text-center">Supported Platforms</h3>
      <div class="grid grid-cols-1 sm:grid-cols-3 gap-4">
        <div class="p-4 rounded-lg bg-[var(--color-bg-surface)] border border-[var(--color-border-dim)] text-center">
          <div class="flex items-center justify-center gap-2 mb-2">
            <svg class="w-5 h-5 text-[var(--color-accent-primary)]" fill="currentColor" viewBox="0 0 24 24">
